     </div>
     <div class="itembox mediaSeven">
        <button type="button" class="btn btn-outline-white flex btn-edit"
        >filter </button>
        <button type="button" class="btn btn-outline-white flex btn-edit"
        >
        <div class="form-check form-switch form-check-reverse">
            <label class="form-check-label" for="flexSwitchCheckDefault">display total befor tax </label>
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          </div>
        </button>
     </div>
     
    </div>

    <br>



    <!-- <h3>All listing</h3> -->
    <!-- <form action="/listing/new" method="get"><button>creat post</button></form>
    <ul> -->
       
        
    <div class="card-group" >
        <div class="row row-cols-1 row-cols-md-3 g-3" >
            <% for( let item of data){ %>
                <div class="col">
                    <div class="card " >
                        <a href="/Listing/<%= item._id %>" class="show"> 
                            <img src="<%= item.image.url %>" class="card-img-top" alt="<%= item.title %>">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= item.title %> <br></b>
                                    &#8377; <%= item.price.toLocaleString("en-IN") %> / night    
                                   <i class="tax-info"> &nbsp;&nbsp; +18% GST</i>
                                </p>
                            </div>
                        </a>    
                    </div>
                </div>
                
            <% } %>
        </div>
    </div>
</body>

<!-- row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3 -->

<script>
    let rdo= document.getElementById("flexSwitchCheckDefault")
    rdo.addEventListener("click",()=>{
        let taxinfo =document.getElementsByClassName("tax-info")
        
        for(info of taxinfo){
            if(info.style.display!="inline"){
            info.style.display="inline"
            }else{info.style.display="none";}
        }
        // console.log(taxinfo);
    })
</script>